<body>

<!-- Navigation -->
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="./shop">SonuStore</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li>
                    <a href="./about">About</a>
                </li>
                <li>
                    <a href="./contact">Contact</a>
                </li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>

<!-- Page Content -->
<div class="container">
    <% if (typeof user != "undefined" && user != null && user.username == "admin") { %>
    <div class="row">
        <div class="col-md-12">
            <button onclick="window.location='./edit_item?id=<%= product.id %>'" class="btn btn-primary pull-right"><i
                        class="fa fa-pencil" style="padding-right: 8px"></i>Edit Item
            </button>
        </div>
    </div>
    <% } %>
    <div class="row">
        <div class="col-lg-3 col-xs-12">
            <div id="image-stage"
                 style="height: 350px;background-image:url(./product-images/<%= product.image_url %>);background-size:contain;background-repeat: no-repeat;">
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="carousel slide multi-item-carousel" id="theCarousel">
                        <div class="carousel-inner">
                            <% for(var i = 0; i < product.image_urls.length; i++) { %>
                            <div class="item<% if(product.image_urls[i] == product.image_url){ %> active<% } %>">
                                <div class="col-xs-4">
                                    <img src="./product-images/<%= product.image_urls[i] %>"
                                         style="max-height: 100px;overflow: hidden;max-width: 100%"
                                         onclick="getHighlighted(this.src)">
                                </div>
                            </div>
                            <% } %>
                        </div>
                        <a class="left carousel-control" href="#theCarousel" data-slide="prev"></a>
                        <a class="right carousel-control" href="#theCarousel" data-slide="next"></a>
                    </div>
                </div>

                <div class="col-md-12" style="padding-top: 8px">
                    <button class="btn btn-warning btn-block" data-toggle="modal" data-target="#exampleModal"
                            data-whatever="@getbootstrap"
                            style="background-color:#fb641b;height: 3em;font-size: 15px"><i class="fa fa-flash"
                                                                                            style="padding-right: 8px"></i>Order
                        Now
                    </button>
                </div>
                <!--<div class="col-md-6 padding-adjust-right" style="padding-top: 2px">
                    <button class="btn btn-warning btn-block"
                            style="background-color:#fb641b;height: 3em;font-size: 15px"><i class="fa fa-flash"
                                                                                            style="padding-right: 8px"></i>Order
                        Now
                    </button>
                </div>
                <div class="col-md-6 padding-adjust-left" style="padding-top: 2px">
                    <button class="btn btn-default btn-block" style="height: 3em;font-size: 15px"><i
                                class="fa fa-shopping-cart"
                                style="padding-right: 8px"></i>Add to Cart
                    </button>
                </div>-->
            </div>
        </div>

        <div class="caption-full col-lg-9 col-xs-12">
            <h4><%= "\u20B9 " + product.price %></h4>
            <table class="table">
                <tr>
                    <td style="width: 200px">Description</td>
                    <td>
                        <%= product.description %>
                    </td>
                </tr>
                <tr>
                    <td style="width: 200px">Occasions</td>
                    <td>
                        <%= product.occasions %>
                    </td>
                </tr>
                <tr>
                    <td style="width: 200px">Colors</td>
                    <td>
                        <%= product.colors %>
                    </td>
                </tr>
                <tr>
                    <td style="width: 200px">Tags</td>
                    <td>
                        <%= product.tags %>
                    </td>
                </tr>
                <tr>
                    <td style="width: 200px">Category</td>
                    <td>
                        <%= product.product_types %>
                    </td>
                </tr>
            </table>
        </div>


    </div>

    <hr>

    <div class="row">
        <div class="col-md-12">
            <span style="font-weight: bold ;">Anonymous</span>
            <span class="pull-right">10 days ago</span>

            <p>This product was great in terms of quality. I would definitely buy another!</p>
        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col-md-12">
            <span style="font-weight: bold ;">Anonymous</span>
            <span class="pull-right">12 days ago</span>

            <p>I've alredy ordered another one!</p>
        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col-md-12">
            <span style="font-weight: bold ;">Anonymous</span>
            <span class="pull-right">15 days ago</span>

            <p>I've seen some better than this, but not at this price. I definitely recommend this item.</p>
        </div>
    </div>
    <hr>
    <div class="form-group" style="margin-top: 16px">
        <textarea class="form-control" rows="3" placeholder="Your Review..."></textarea>
    </div>
    <div class="text-right">
        <a class="btn btn-success">Leave a Review</a>
    </div>
    <br>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="exampleModalLabel">New Order</h4>
                </div>
                <form onsubmit="return placeOrder()">
                    <input type="text" id="users_id" style="display: none"
                            <% if (user && user.id){ %>
                            <%= 'value=' + user.id %>
                            <% } %>
                            >
                    <input type="text" id="products_id" style="display: none"
                            <% if (product && product.id){ %>
                            <%= 'value=' + product.id %>
                            <% } %>
                            >

                    <div class="modal-body">
                        <div class="form-group">
                            <label for="name" class="control-label">Name:</label>
                            <input type="text" class="form-control" id="name" name="name"
                                   placeholder="Your Name"
                                   maxlength="100"
                                    <% if (user && user.username){ %>
                                    <%= 'value=' + user.username %>
                                    <% } %>
                                   required>
                        </div>
                        <div class="form-group">
                            <label for="quantity" class="control-label">Quantity:</label>
                            <input class="form-control" type="number" id="quantity" name="phone"
                                   placeholder="Quantity" min="1" max="100" value=1 required>
                        </div>
                        <div class="form-group">
                            <label for="phone" class="control-label">Phone:</label>
                            <input class="form-control" type="text" id="phone" name="phone"
                                   placeholder="Phone Number"
                                    <% if (user && user.phone){ %>
                                    <%= 'value=' + user.phone %>
                                    <% } %>
                                   maxlength="50" required>
                        </div>
                        <div class="form-group">
                            <label for="email" class="control-label">Email:</label>
                            <input class="form-control" id="email" name="email" type="email" placeholder="Email"
                                    <% if (user && user.emailid){ %>
                                    <%= 'value=' + user.emailid %>
                                    <% } %>
                                   maxlength="150" required>
                        </div>
                        <div class="form-address">
                            <label for="address" class="control-label">Address:</label>
                            <textarea class="form-control" id="address" name="address" placeholder="Address"
                                      maxlength="300" required><% if(user && user.address != null){ %><%= user.address %>
                                <% } %></textarea>
                        </div>
                        <div class="form-message">
                            <label for="message" class="control-label">Message:</label>
                            <textarea class="form-control" id="message" name="message" placeholder="Any Message"
                                      maxlength="300"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Send message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="orderPlaceModal" tabindex="-1" role="dialog"
         aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <i class="fa fa-check fa-2x" aria-hidden="true" style="margin-right: 8px"></i><h4
                            style="display: inline-block">Your order has been recorded</h4>
                </div>
            </div>
        </div>
    </div>
</div>

