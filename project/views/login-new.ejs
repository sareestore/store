<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>iSview - Inject Solar LLP</title>
    <link rel="icon" href="icons/isviewlogo.png"/>
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">

    <link rel="stylesheet" href="css/style.css">


</head>

<body>
<div class="form">

    <ul class="tab-group">
        <li class="tab active"><a href="#login">Log In</a></li>
        <li class="tab"><a href="#signup">Sign Up</a></li>
    </ul>

    <div class="tab-content">
        <div id="login">
            <h1>Welcome Back!</h1>

            <form action="/login" method="post">

                <div class="field-wrap">
                    <label>
                        Email Address/User Name<span class="req">*</span>
                    </label>
                    <input type="text" required autocomplete="off" name="username"/>
                </div>

                <div class="field-wrap">
                    <label>
                        Password<span class="req">*</span>
                    </label>
                    <input type="password" required autocomplete="off" name="password"/>
                </div>

                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                <p style="color: red"><%= message %></p>
                <% } %>
                <p class="forgot"><a href="frgtpass.html">Forgot Password?</a></p>

                <button class="button button-block"/>
                Log In</button>

            </form>

        </div>
        <div id="signup">
            <h1>Sign Up for iSview</h1>

            <form action="/signup" method="post">

                <div class="top-row">
                    <div class="field-wrap">
                        <label>
                            First Name<span class="req">*</span>
                        </label>
                        <input type="text" required autocomplete="off" name="fname"/>
                    </div>

                    <div class="field-wrap">
                        <label>
                            Last Name<span class="req">*</span>
                        </label>
                        <input type="text" required autocomplete="off" name="lname"/>
                    </div>
                </div>
                <div class="field-wrap">
                    <label>
                        Select Username<span class="req">*</span>
                    </label>
                    <input type="text" required autocomplete="off" name="username"/>
                </div>
                <div class="field-wrap">
                    <label>
                        Email Address<span class="req">*</span>
                    </label>
                    <input type="email" required autocomplete="off" name="usermail"/>
                </div>

                <div class="field-wrap">
                    <label>
                        Set A Password<span class="req">*</span>
                    </label>
                    <input type="password" required autocomplete="off" name="password"/>
                </div>
                <div class="field-wrap">
                    <label>
                        Contact Number<span class="req">*</span>
                    </label>
                    <input type="tel" required autocomplete="off" name="phone"/>
                </div>
                <div class="field-wrap">
                    <label>
                        Contact Address<span class="req">*</span>
                    </label>
                    <input type="address" required autocomplete="off" name="address"/>
                </div>
                <button type="submit" class="button button-block"/>
                Get Started</button>

            </form>

        </div>


    </div>
    <!-- tab-content -->

</div>
<!-- /form -->
<script src='./libs/js/jquery.min.js'></script>

<script src="js/login.js"></script>

</body>
</html>
